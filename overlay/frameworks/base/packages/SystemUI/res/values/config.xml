<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>
    <!-- Show the network traffic monitor on statusbar even if the device has a notch -->
    <bool name="config_forceShowNetworkTrafficOnStatusBar">true</bool>

    <!-- Doze: check proximity sensor before pulsing? -->
    <bool name="doze_proximity_check_before_pulse">false</bool>

    <!-- Whether usage of the proximity sensor during doze is supported -->
    <bool name="doze_proximity_sensor_supported">false</bool>
    
    <!-- Height of the status bar header bar when on Keyguard -->
    <dimen name="status_bar_header_height_keyguard">@*android:dimen/status_bar_height_portrait</dimen>

    <!-- The battery current divider, some kernel report current value in mA other in ÂµA.
         Leave 1 if you have mA, put 1000 if you have ÂµA-->
    <integer name="config_battCurrentDivider" translatable="false">1000</integer>

    <!-- Default rounded corner curve (a Bezier). Must match (the curved path in) rounded.xml.
         Note that while rounded.xml includes the entire path (including the horizontal and vertical
         corner edges), this pulls out just the curve.
     -->
    <string name="config_rounded_mask" translatable="false">
        M0,50V0H50A50,50 0,0 0,0 50Z
    </string>

    <!--  Allow CornerHandleView and PathSpecCornerPathRenderer to decouple from corner-radius -->
    <dimen name="config_rounded_mask_size">50px</dimen>
</resources>

